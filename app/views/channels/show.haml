- content_for :title do
  = @channel.title

.wrapper{ id: @channel.slug }

  .header
    = link_to @channel.title, encoded_url(@channel)

  .contents.active
    - @channel.contents.each do |connectable|
      - if connectable.is_channel?
        .channel.object{ data: { href: encoded_url(connectable), slug: connectable.slug } }
          = connectable.title
      
      - else
        .block.object{ class: connectable._class.downcase, data: { href: encoded_url(connectable) } }
          = appropriate_preview(connectable)